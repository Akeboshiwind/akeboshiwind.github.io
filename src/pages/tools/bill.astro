---
// Bill Splitter - standalone React app
---
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Bill Splitter | Blog by the Rocks</title>
  <meta name="description" content="Split bills easily with friends" />

  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  <link rel="shortcut icon" href="/favicon.ico" />

  <script src="https://cdn.tailwindcss.com" is:inline></script>
  <script is:inline>
    tailwind.config = { darkMode: 'media' }
  </script>

  <script src="https://unpkg.com/react@18/umd/react.production.min.js" is:inline></script>
  <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js" is:inline></script>
  <script src="https://unpkg.com/@babel/standalone/babel.min.js" is:inline></script>
</head>
<body class="bg-white dark:bg-gray-900">
  <div class="max-w-4xl mx-auto p-4">
    <header class="mb-4">
      <a href="/tools/" class="text-blue-600 dark:text-blue-400 hover:underline">&larr; Back to Tools</a>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mt-2">Bill Splitter</h1>
    </header>
    <div id="root"></div>
  </div>

  <script type="text/babel" is:inline>
const { useState, useEffect } = React;

const Component = () => {
  const loadFromLocalStorage = (key, defaultValue) => {
    try {
      const savedData = localStorage.getItem(`billSplitter_${key}`);
      if (key === 'currency' || key === 'homeCurrency') return savedData || defaultValue;
      if (key === 'exchangeRate') return savedData ? parseFloat(savedData) : defaultValue;
      return savedData ? JSON.parse(savedData) : defaultValue;
    } catch (error) {
      console.error(`Error loading ${key} from localStorage:`, error);
      return defaultValue;
    }
  };

  const defaultItems = [
    { name: 'Caesar Salad', price: 12.00, quantity: 1 },
    { name: 'Coffee', price: 5.00, quantity: 2 },
    { name: 'Burger', price: 16.00, quantity: 1 },
    { name: 'Pasta', price: 14.00, quantity: 1 },
    { name: 'Sparkling Water', price: 4.00, quantity: 1 },
    { name: 'Garlic Bread', price: 8.00, quantity: 1 },
  ].map((item, index) => ({ ...item, id: index + 1 }));

  const defaultPeople = ['Alice', 'Bob', 'Charlie'];

  // Default assignments: Alice (salad, coffee), Bob (burger, coffee), Charlie (pasta, water), shared (garlic bread)
  const defaultAssignments = {
    '1-0': ['Alice'],           // Caesar Salad
    '2-0': ['Alice'],           // Coffee 1
    '2-1': ['Bob'],             // Coffee 2
    '3-0': ['Bob'],             // Burger
    '4-0': ['Charlie'],         // Pasta
    '5-0': ['Charlie'],         // Sparkling Water
    '6-0': ['Alice', 'Bob', 'Charlie'], // Garlic Bread (shared)
  };

  const defaultShares = {
    '1-0': { 'Alice': 100 },
    '2-0': { 'Alice': 100 },
    '2-1': { 'Bob': 100 },
    '3-0': { 'Bob': 100 },
    '4-0': { 'Charlie': 100 },
    '5-0': { 'Charlie': 100 },
    '6-0': { 'Alice': 33.33, 'Bob': 33.33, 'Charlie': 33.34 },
  };

  const [people, setPeople] = useState(loadFromLocalStorage('people', defaultPeople));
  const [personShares, setPersonShares] = useState(loadFromLocalStorage('personShares', defaultShares));
  const [itemAssignments, setItemAssignments] = useState(loadFromLocalStorage('itemAssignments', defaultAssignments));
  const [items, setItems] = useState(loadFromLocalStorage('items', defaultItems));
  const [expandedRows, setExpandedRows] = useState(loadFromLocalStorage('expandedRows', {}));
  const [processingError, setProcessingError] = useState(null);
  const [currency, setCurrency] = useState(loadFromLocalStorage('currency', '$'));
  const [homeCurrency, setHomeCurrency] = useState(loadFromLocalStorage('homeCurrency', '$'));
  const [exchangeRate, setExchangeRate] = useState(loadFromLocalStorage('exchangeRate', 1));
  const [showCurrencySettings, setShowCurrencySettings] = useState(loadFromLocalStorage('showCurrencySettings', false));
  const [showPeopleSettings, setShowPeopleSettings] = useState(loadFromLocalStorage('showPeopleSettings', false));

  const claudePromptText = `This is an image of a receipt. Extract all the items with their name, price, and quantity. Also identify the currency used in the receipt (£, $, €, etc.).

Format the output as a JSON object with two fields:
1. "items": An array of items, each with name, price (as a number), and quantity (as a number)
2. "currency": The currency symbol used in the receipt (£, $, €, etc.)

If this is not a receipt, simply respond with: "Not a receipt"

Here's an example of the expected format with sample data:
{
  "items": ${JSON.stringify(defaultItems.map(({id, ...item}) => item))},
  "currency": "$"
}`;

  useEffect(() => { localStorage.setItem('billSplitter_people', JSON.stringify(people)); }, [people]);
  useEffect(() => { localStorage.setItem('billSplitter_personShares', JSON.stringify(personShares)); }, [personShares]);
  useEffect(() => {
    localStorage.setItem('billSplitter_itemAssignments', JSON.stringify(itemAssignments));
    setExpandedRows(prev => {
      const newState = { ...prev };
      let hasChanges = false;
      Object.keys(newState).forEach(itemId => {
        if (!canItemBeSplit(itemId)) { delete newState[itemId]; hasChanges = true; }
      });
      return hasChanges ? newState : prev;
    });
  }, [itemAssignments]);
  useEffect(() => { localStorage.setItem('billSplitter_items', JSON.stringify(items)); }, [items]);
  useEffect(() => { localStorage.setItem('billSplitter_expandedRows', JSON.stringify(expandedRows)); }, [expandedRows]);
  useEffect(() => { localStorage.setItem('billSplitter_currency', currency); }, [currency]);
  useEffect(() => { localStorage.setItem('billSplitter_homeCurrency', homeCurrency); }, [homeCurrency]);
  useEffect(() => { localStorage.setItem('billSplitter_exchangeRate', exchangeRate.toString()); }, [exchangeRate]);
  useEffect(() => { localStorage.setItem('billSplitter_showCurrencySettings', JSON.stringify(showCurrencySettings)); }, [showCurrencySettings]);
  useEffect(() => { localStorage.setItem('billSplitter_showPeopleSettings', JSON.stringify(showPeopleSettings)); }, [showPeopleSettings]);

  const expandedItems = items.flatMap(item =>
    Array(item.quantity).fill().map((_, i) => ({
      ...item, uniqueId: `${item.id}-${i}`, originalQuantity: item.quantity, quantity: 1
    }))
  );

  const createEqualSplit = (people) => {
    const sharePerPerson = Math.floor((100 / people.length) * 100) / 100;
    const shares = {};
    people.forEach(p => { shares[p] = 0; });
    let totalAllocated = 0;
    people.forEach((person, index) => {
      if (index === people.length - 1) { shares[person] = 100 - totalAllocated; }
      else { shares[person] = sharePerPerson; totalAllocated += sharePerPerson; }
    });
    return shares;
  };

  const updateSharesFromAssignments = (assignments) => {
    const newShares = {};
    Object.entries(assignments).forEach(([itemUniqueId, assignedPeople]) => {
      if (assignedPeople.length > 0) newShares[itemUniqueId] = createEqualSplit(assignedPeople);
    });
    setPersonShares(newShares);
  };

  const togglePersonAssignment = (itemUniqueId, person) => {
    const newAssignments = { ...itemAssignments };
    const currentAssignees = newAssignments[itemUniqueId] || [];
    if (currentAssignees.includes(person)) {
      newAssignments[itemUniqueId] = currentAssignees.filter(p => p !== person);
      if (newAssignments[itemUniqueId].length === 0) delete newAssignments[itemUniqueId];
    } else {
      newAssignments[itemUniqueId] = [...currentAssignees, person];
    }
    setItemAssignments(newAssignments);
    updateSharesFromAssignments(newAssignments);
  };

  const handleShareChange = (itemUniqueId, person, share) => {
    const shareValue = parseInt(share, 10) || 0;
    setPersonShares(prev => {
      const updated = { ...prev };
      if (!updated[itemUniqueId]) updated[itemUniqueId] = {};
      updated[itemUniqueId][person] = shareValue;
      return updated;
    });
  };

  const getTotalPercentForItem = (itemUniqueId) => {
    if (!personShares[itemUniqueId]) return 0;
    const total = Object.values(personShares[itemUniqueId]).reduce((sum, share) => sum + share, 0);
    if (Math.abs(total - 100) < 0.1) return 100;
    return Math.round(total * 100) / 100;
  };

  const convertToHomeCurrency = (amount) => {
    if (currency === homeCurrency || exchangeRate === 1) return amount;
    return amount * exchangeRate;
  };

  const calculatePersonTotal = (person) => {
    let total = 0;
    expandedItems.forEach(item => {
      if (personShares[item.uniqueId] && personShares[item.uniqueId][person]) {
        total += (item.price * (personShares[item.uniqueId][person] / 100));
      }
    });
    return total.toFixed(2);
  };

  const updateItemName = (id, newName) => setItems(prev => prev.map(item => item.id === id ? { ...item, name: newName } : item));
  const updateItemPrice = (id, newPrice) => setItems(prev => prev.map(item => item.id === id ? { ...item, price: parseFloat(newPrice) || 0 } : item));

  const billTotal = expandedItems.reduce((sum, item) => sum + item.price, 0).toFixed(2);
  const allocatedTotal = people.reduce((sum, person) => sum + parseFloat(calculatePersonTotal(person)), 0).toFixed(2);
  const canItemBeSplit = (itemUniqueId) => (itemAssignments[itemUniqueId]?.length ?? 0) >= 2;

  const toggleExpandedRow = (itemUniqueId) => {
    if (!canItemBeSplit(itemUniqueId)) return;
    setExpandedRows(prev => {
      const newState = { ...prev };
      if (newState[itemUniqueId]) delete newState[itemUniqueId];
      else newState[itemUniqueId] = true;
      return newState;
    });
  };

  const resetData = () => {
    ['people','personShares','itemAssignments','items','expandedRows','currency','homeCurrency','exchangeRate','showCurrencySettings','showPeopleSettings']
      .forEach(k => localStorage.removeItem(`billSplitter_${k}`));
    setPeople(defaultPeople); setPersonShares(defaultShares); setItemAssignments(defaultAssignments); setItems(defaultItems);
    setExpandedRows({}); setProcessingError(null); setCurrency('$'); setHomeCurrency('$');
    setExchangeRate(1); setShowCurrencySettings(false); setShowPeopleSettings(false);
  };

  return (
    <div className="p-2 sm:p-4 max-w-4xl mx-auto text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-800">
      <div className="mb-6 bg-blue-50 dark:bg-blue-900/20 p-3 sm:p-4 rounded text-sm">
        <div className="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-3">
          <div>
            <div className="flex justify-between items-center mb-1">
              <p><strong>Instructions:</strong></p>
              <button onClick={resetData} className="sm:hidden px-3 py-1 bg-red-500 hover:bg-red-600 text-white rounded text-xs">Reset</button>
            </div>
            <ol className="list-decimal pl-5 space-y-1">
              <li>Scan a receipt or use the default items</li>
              <li>Claude will detect the currency from your receipt</li>
              <li>Edit item names and prices as needed</li>
              <li>Adjust currency settings if needed</li>
              <li>Click on person buttons to assign people to items</li>
              <li>When 2+ people are assigned, click <strong>Split</strong></li>
              <li>Adjust percentages to customize the split</li>
            </ol>
            <p className="mt-2 text-xs italic">All changes are automatically saved.</p>
          </div>
          <button onClick={resetData} className="hidden sm:block px-3 py-1 bg-red-500 hover:bg-red-600 text-white rounded text-sm">Reset Data</button>
        </div>
      </div>

      <div className="mb-6 bg-yellow-50 dark:bg-yellow-900/20 p-3 sm:p-4 rounded">
        <div className="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-2 mb-2">
          <h3 className="font-semibold">Scan Receipt with Claude</h3>
          <button onClick={() => navigator.clipboard.writeText(claudePromptText)} className="self-start bg-blue-500 hover:bg-blue-600 text-white px-3 sm:px-4 py-1 sm:py-2 rounded text-sm w-full sm:w-auto">Copy Prompt</button>
        </div>
        <p className="mb-2 text-sm">Visit <a href="https://claude.ai" target="_blank" rel="noopener noreferrer" className="text-blue-600 dark:text-blue-400 underline">claude.ai</a>, upload your receipt image, and paste the prompt below:</p>
        <div className="bg-white dark:bg-gray-700 p-3 rounded border border-gray-300 dark:border-gray-600 mb-1 text-sm whitespace-pre-wrap font-mono text-xs max-h-24 overflow-y-auto">{claudePromptText}</div>
      </div>

      <div className="mb-6">
        <h2 className="text-lg font-semibold mb-2">Enter Claude Response</h2>
        <textarea className="w-full border dark:border-gray-600 p-2 mb-2 rounded dark:bg-gray-700 font-mono text-sm" rows="1" placeholder='{"items": [...], "currency": "£"}'
          onChange={(e) => {
            try {
              const data = JSON.parse(e.target.value.trim());
              if (data.items && Array.isArray(data.items)) {
                setItems(data.items.map((item, i) => ({ id: i + 1, name: item.name || 'Unnamed', price: parseFloat(item.price) || 0, quantity: parseInt(item.quantity) || 1 })));
                if (data.currency) setCurrency(data.currency);
                setPersonShares({}); setItemAssignments({}); setExpandedRows({}); setProcessingError(null);
              } else setProcessingError('Invalid format');
            } catch { setProcessingError('Invalid JSON'); }
          }} />
        {processingError && <div className="mt-2 p-2 bg-red-100 dark:bg-red-900/20 text-red-700 dark:text-red-400 rounded text-sm"><strong>Error:</strong> {processingError}</div>}
      </div>

      <div className="mb-6">
        <div className="flex justify-between items-center mb-2">
          <h2 className="text-lg font-semibold">Manage People</h2>
          <button onClick={() => setShowPeopleSettings(!showPeopleSettings)} className="text-blue-500 hover:text-blue-700 text-sm">{showPeopleSettings ? 'Hide ▲' : 'Show ▼'}</button>
        </div>
        {!showPeopleSettings && <div className="bg-gray-100 dark:bg-gray-700 p-3 rounded flex flex-wrap gap-1 text-sm"><span className="font-medium mr-2">People:</span>{people.map((p,i) => <span key={i} className="bg-white dark:bg-gray-800 rounded-full px-2 py-1 text-xs">{p}</span>)}</div>}
        {showPeopleSettings && (
          <div className="bg-gray-100 dark:bg-gray-700 p-3 rounded">
            <div className="flex flex-wrap gap-2 mb-2">
              {people.map((person, i) => (
                <div key={i} className="flex items-center bg-white dark:bg-gray-800 rounded-full px-3 py-1">
                  <span className="mr-2">{person}</span>
                  <button onClick={() => { setPeople(people.filter((_,idx) => idx !== i)); }} className="text-red-500">×</button>
                </div>
              ))}
            </div>
            <div className="flex items-center">
              <input type="text" placeholder="Add person" className="border dark:border-gray-600 p-2 rounded mr-2 dark:bg-gray-700 flex-grow"
                onKeyDown={(e) => { if (e.key === 'Enter' && e.target.value.trim() && !people.includes(e.target.value.trim())) { setPeople([...people, e.target.value.trim()]); e.target.value = ''; }}} />
              <button onClick={(e) => { const input = e.target.previousSibling; if (input.value.trim() && !people.includes(input.value.trim())) { setPeople([...people, input.value.trim()]); input.value = ''; }}} className="bg-blue-500 hover:bg-blue-600 text-white px-3 py-2 rounded">Add</button>
            </div>
          </div>
        )}
      </div>

      <div className="mb-6 overflow-x-auto">
        <h2 className="text-lg font-semibold mb-2">Assign Items</h2>
        <table className="w-full border-collapse text-sm">
          <thead><tr className="bg-gray-100 dark:bg-gray-700"><th className="border dark:border-gray-600 p-1 sm:p-2 text-left">Item</th><th className="border dark:border-gray-600 p-1 sm:p-2 text-right">Price ({currency})</th><th className="border dark:border-gray-600 p-1 sm:p-2">Assigned To</th><th className="border dark:border-gray-600 p-1 sm:p-2 text-center w-20">Actions</th></tr></thead>
          <tbody>
            {expandedItems.map((item) => {
              const totalPercent = getTotalPercentForItem(item.uniqueId);
              const isComplete = totalPercent === 100;
              const isOver = totalPercent > 100;
              const assignees = itemAssignments[item.uniqueId] || [];
              const isFirst = item.uniqueId.endsWith('-0');
              const orig = items.find(i => i.id === item.id);
              return (
                <React.Fragment key={item.uniqueId}>
                  <tr className={`${isComplete ? 'bg-green-50 dark:bg-green-900/20' : ''} ${isOver ? 'bg-red-50 dark:bg-red-900/20' : ''} hover:bg-gray-50 dark:hover:bg-gray-700`}>
                    <td className="border dark:border-gray-600 p-1 sm:p-2">
                      {isFirst ? <input type="text" value={orig.name} onChange={(e) => updateItemName(orig.id, e.target.value)} className="w-full border dark:border-gray-500 p-1 rounded dark:bg-gray-600" /> : <span>{item.name}</span>}
                      {item.originalQuantity > 1 && ` (${parseInt(item.uniqueId.split('-')[1]) + 1}/${item.originalQuantity})`}
                    </td>
                    <td className="border dark:border-gray-600 p-1 sm:p-2">
                      {isFirst ? <input type="number" min="0" step="0.01" value={orig.price} onChange={(e) => updateItemPrice(orig.id, e.target.value)} className="w-20 border dark:border-gray-500 p-1 rounded text-right dark:bg-gray-600" /> : <span className="text-right block">{item.price.toFixed(2)}</span>}
                    </td>
                    <td className="border dark:border-gray-600 p-1 sm:p-2">
                      <div className="flex flex-wrap gap-1">{people.map(p => <button key={p} onClick={() => togglePersonAssignment(item.uniqueId, p)} className={`px-1 sm:px-2 py-1 text-xs rounded-full ${assignees.includes(p) ? 'bg-blue-500 text-white' : 'bg-gray-200 dark:bg-gray-600 text-gray-700 dark:text-gray-300'}`}>{p}</button>)}</div>
                    </td>
                    <td className="border dark:border-gray-600 p-1 sm:p-2 text-center">
                      <button onClick={() => toggleExpandedRow(item.uniqueId)} disabled={!canItemBeSplit(item.uniqueId)} className={`px-2 py-1 rounded text-xs ${canItemBeSplit(item.uniqueId) ? 'bg-blue-500 hover:bg-blue-600 text-white' : 'bg-gray-300 dark:bg-gray-700 text-gray-500 cursor-not-allowed'} ${expandedRows[item.uniqueId] ? 'bg-blue-700' : ''}`}>{expandedRows[item.uniqueId] ? 'Hide' : 'Split'}</button>
                    </td>
                  </tr>
                  {expandedRows[item.uniqueId] && canItemBeSplit(item.uniqueId) && (
                    <tr className="bg-gray-50 dark:bg-gray-800">
                      <td colSpan="4" className="p-2 sm:p-4 border dark:border-gray-600">
                        <div className="bg-white dark:bg-gray-700 p-2 sm:p-4 rounded shadow">
                          <h4 className="font-semibold text-sm mb-3">Adjust Split</h4>
                          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>{assignees.map(p => <div key={p} className="flex items-center mb-2"><span className="mr-2 w-24">{p}</span><input type="number" min="0" max="100" value={personShares[item.uniqueId]?.[p] || 0} onChange={(e) => handleShareChange(item.uniqueId, p, e.target.value)} className="w-20 p-2 text-right border dark:border-gray-500 dark:bg-gray-600 rounded" /><span className="ml-1">%</span></div>)}</div>
                            <div>
                              <div className={`text-lg mb-2 ${isComplete ? 'text-green-600' : isOver ? 'text-red-600' : 'text-yellow-600'}`}>Total: {totalPercent}%</div>
                              <button onClick={() => { const ns = { ...personShares }; ns[item.uniqueId] = createEqualSplit(assignees); setPersonShares(ns); }} className="bg-blue-500 hover:bg-blue-600 text-white text-xs px-3 py-1 rounded">Equal Split</button>
                            </div>
                          </div>
                        </div>
                      </td>
                    </tr>
                  )}
                </React.Fragment>
              );
            })}
          </tbody>
        </table>
      </div>

      <div className="mb-6">
        <div className="flex justify-between items-center mb-2">
          <h2 className="text-lg font-semibold">Currency Settings</h2>
          <button onClick={() => setShowCurrencySettings(!showCurrencySettings)} className="text-blue-500 hover:text-blue-700 text-sm">{showCurrencySettings ? 'Hide ▲' : 'Show ▼'}</button>
        </div>
        {!showCurrencySettings && <div className="bg-gray-100 dark:bg-gray-700 p-3 rounded text-sm"><span className="font-medium">Bill Currency: {currency}</span>{currency !== homeCurrency && exchangeRate !== 1 && <span> → Home: {homeCurrency} (Rate: {exchangeRate})</span>}</div>}
        {showCurrencySettings && (
          <div className="bg-gray-100 dark:bg-gray-700 p-3 rounded grid grid-cols-1 md:grid-cols-2 gap-3">
            <div><label className="block text-sm font-medium mb-1">Bill Currency</label><select value={currency} onChange={(e) => setCurrency(e.target.value)} className="p-2 border dark:border-gray-600 rounded dark:bg-gray-700"><option value="£">£ GBP</option><option value="€">€ EUR</option><option value="$">$ USD</option><option value="¥">¥ JPY</option></select></div>
            <div><label className="block text-sm font-medium mb-1">Home Currency</label><select value={homeCurrency} onChange={(e) => setHomeCurrency(e.target.value)} className="p-2 border dark:border-gray-600 rounded dark:bg-gray-700"><option value="£">£ GBP</option><option value="€">€ EUR</option><option value="$">$ USD</option><option value="¥">¥ JPY</option></select></div>
            <div><label className="block text-sm font-medium mb-1">Exchange Rate</label><input type="number" min="0" step="0.01" value={exchangeRate} onChange={(e) => setExchangeRate(parseFloat(e.target.value) || 1)} className="w-32 p-2 border dark:border-gray-600 rounded dark:bg-gray-700" /></div>
          </div>
        )}
      </div>

      <div className="mb-6">
        <h2 className="text-lg font-semibold mb-2">Summary</h2>
        <div className="bg-gray-100 dark:bg-gray-700 p-3 rounded grid grid-cols-1 md:grid-cols-2 gap-3">
          <div className="p-2 bg-white dark:bg-gray-800 rounded">
            <h3 className="font-semibold text-sm mb-2">Per Person</h3>
            {people.map((p,i) => {
              const amt = calculatePersonTotal(p);
              const home = convertToHomeCurrency(parseFloat(amt)).toFixed(2);
              return <div key={i} className="flex justify-between py-1 border-b dark:border-gray-700"><span>{p}:</span><span className="font-semibold">{currency}{amt}{currency !== homeCurrency && exchangeRate !== 1 && <span className="text-gray-500 ml-1 text-sm">({homeCurrency}{home})</span>}</span></div>;
            })}
          </div>
          <div className="p-2 bg-white dark:bg-gray-800 rounded">
            <h3 className="font-semibold text-sm mb-2">Bill Total</h3>
            <div className="flex justify-between py-1 border-b dark:border-gray-700"><span className="font-bold">Total:</span><span className="font-bold">{currency}{billTotal}</span></div>
            <div className="flex justify-between py-1"><span className={parseFloat(allocatedTotal) !== parseFloat(billTotal) ? 'text-red-600' : 'text-green-600'}>Allocated:</span><span className={parseFloat(allocatedTotal) !== parseFloat(billTotal) ? 'text-red-600' : 'text-green-600'}>{currency}{allocatedTotal}</span></div>
          </div>
        </div>
      </div>
    </div>
  );
};

const root = ReactDOM.createRoot(document.getElementById('root'));
root.render(<Component />);
  </script>
</body>
</html>
