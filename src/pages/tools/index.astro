  },
];
---

<Layout title="Tools" description="A collection of useful tools">
  <h1>Tools</h1>
  <p>A collection of useful tools mostly created with Claude.</p>

  <ul class="post-list">
    {tools.map(tool => (
      <li>
        <time datetime={tool.date}>{tool.date}</time>
        <a href={tool.url}>{tool.title}</a>
      </li>
    ))}
  </ul>
</Layout>
