import Layout from '../../layouts/Layout.astro';

const tools = [
  {
    title: 'Lateral Flow Test Reader',
    url: '/tools/test-reader/',
    date: '2026-02-01',
  },
  {
    title: 'Hindi Letters SRS',
    url: '/tools/hindi-srs/',
    date: '2026-02-01',
  },
  {
    title: 'Wedding Celebration',
    url: 'https://celebration.hina-oliver.com/',
    date: '2026-01-11',
  },
  {
    title: 'Mood Tracker',
    url: 'https://mood.bythe.rocks/',
    date: '2025-12-20',
  },
  {
    title: 'Bitemporal Visualizer',
    url: '/tools/bitemporal/',
    date: '2025-12-19',
  },
  {
    title: 'YNAB Reimbursement Report',
